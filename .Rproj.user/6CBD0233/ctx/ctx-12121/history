# 00_descarga_datos.R
# install.packages("WDI")
# install.packages("tidyverse")
library(WDI)
library(tidyverse)
indicadores <- c(
life_expectancy     = "SP.DYN.LE00.IN",
gdp_per_capita_ppp  = "NY.GDP.PCAP.PP.CD",
health_expenditure  = "SH.XPD.CHEX.PC.CD",
access_clean_water  = "SH.H2O.BASW.ZS",
infant_mortality    = "SP.DYN.IMRT.IN"
)
datos_raw <- WDI(
country   = "all",
indicator = indicadores,
start     = 2000,
end       = 2020,
extra     = TRUE,
cache     = NULL
)
datos_raw <- datos_raw %>%
filter(region != "Aggregates")
write_csv(datos_raw, "data/raw/salud_datos_raw.csv")
install.packages("WDI")
install.packages("tidyverse")
